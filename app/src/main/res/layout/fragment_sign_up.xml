<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewSignUpSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextEmailSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/editTextFirstnameSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Firstname"/>

        <EditText
            android:id="@+id/editTextLastnameSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Lastname"/>

        <EditText
            android:id="@+id/editTextPasswordSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Password"/>

        <EditText
            android:id="@+id/editTextPasswordConfirmSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Confirm Password"/>

        <Button
            android:id="@+id/buttonSignUpSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Sign Up" />

        <TextView
            android:id="@+id/textViewLoginSignUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already having an Account? Login"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>